<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey">

    <!--Horizontal Line-->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/line_horizontal_33"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.33" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/line_horizontal_66"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.66" />

    <!--Vertical Line-->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/line_vertical_50"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.50" />

    <!--Visa/MasterCard-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/masterVisaMode"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="2dp"
        android:background="@drawable/custom_dialog_border"
        app:layout_constraintBottom_toBottomOf="@id/line_horizontal_33"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/line_vertical_50"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/master_visa_line_horizontal_65"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.65" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:padding="2dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_master_visa"
            app:layout_constraintBottom_toBottomOf="@id/master_visa_line_horizontal_65"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fontFamily="@font/roboto_bold_italic"
            android:gravity="center"
            android:text="@string/title_visa_mastercard"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/master_visa_line_horizontal_65" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--EzLink-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ezLinkMode"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="2dp"
        android:background="@drawable/custom_dialog_border"
        app:layout_constraintBottom_toBottomOf="@id/line_horizontal_33"
        app:layout_constraintLeft_toLeftOf="@id/line_vertical_50"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/ezLink_line_horizontal_65"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.65" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:padding="2dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_ezlink"
            app:layout_constraintBottom_toBottomOf="@id/ezLink_line_horizontal_65"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fontFamily="@font/roboto_bold_italic"
            android:gravity="center"
            android:text="@string/title_ez_link"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/ezLink_line_horizontal_65" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--PayNow-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/payNowMode"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="2dp"
        android:background="@drawable/custom_dialog_border"
        app:layout_constraintBottom_toBottomOf="@id/line_horizontal_66"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/line_vertical_50"
        app:layout_constraintTop_toTopOf="@id/line_horizontal_33">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/pay_now_line_horizontal_65"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.65" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:padding="2dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_pay_now"
            app:layout_constraintBottom_toBottomOf="@id/pay_now_line_horizontal_65"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fontFamily="@font/roboto_bold_italic"
            android:gravity="center"
            android:text="@string/title_pay_now"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/pay_now_line_horizontal_65" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--AliPay-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/alipayMode"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="2dp"
        android:background="@drawable/custom_dialog_border"
        app:layout_constraintBottom_toBottomOf="@id/line_horizontal_66"
        app:layout_constraintLeft_toLeftOf="@id/line_vertical_50"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/line_horizontal_33">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/alipay_line_horizontal_65"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.65" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:padding="2dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_alipay"
            app:layout_constraintBottom_toBottomOf="@id/alipay_line_horizontal_65"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fontFamily="@font/roboto_bold_italic"
            android:gravity="center"
            android:text="@string/title_ali_pay"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/alipay_line_horizontal_65" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--GrabPay-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/grabPayMode"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="2dp"
        android:background="@drawable/custom_dialog_border"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/line_vertical_50"
        app:layout_constraintTop_toTopOf="@id/line_horizontal_66">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/grab_pay_line_horizontal_65"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.65" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:padding="2dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_grab_pay"
            app:layout_constraintBottom_toBottomOf="@id/grab_pay_line_horizontal_65"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fontFamily="@font/roboto_bold_italic"
            android:gravity="center"
            android:text="@string/title_grab_pay"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/grab_pay_line_horizontal_65" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--WeChat-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/weChatMode"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="2dp"
        android:background="@drawable/custom_dialog_border"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/line_vertical_50"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/line_horizontal_66">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/wechat_line_horizontal_65"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.65" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:padding="2dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_wechat"
            app:layout_constraintBottom_toBottomOf="@id/wechat_line_horizontal_65"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fontFamily="@font/roboto_bold_italic"
            android:gravity="center"
            android:text="@string/title_we_chat"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/wechat_line_horizontal_65" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>